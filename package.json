{
  "name": "space-invaders-js",
  "version": "1.0.0",
  "description": "Modern Space Invaders implementation with advanced rendering and performance optimization",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "start": "vite",
    "start:prod": "serve -s dist -l 80",
    "build": "vite build",
    "preview": "vite preview",
    "deploy": "bash scripts/deploy.sh",
    "deploy:preview": "npx cross-env GITHUB_PAGES_BASE=/space-invaders-js-v100/preview/ npm run build",
    "deploy:production": "npx cross-env GITHUB_PAGES_BASE=/space-invaders-js-v100/ npm run build",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:perf": "node tests/performance/runner.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "prepare": "husky install",
    "validate": "npm-run-all --parallel test lint"
  },
  "dependencies": {
    "core-js": "^3.35.0",
    "serve": "^14.2.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@vitest/coverage-v8": "^1.1.0",
    "cross-env": "^10.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-jsdoc": "^46.9.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.0",
    "vite": "^5.0.0",
    "vitest": "^1.1.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "> 0.2%"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/space-invaders-js.git"
  },
  "keywords": [
    "game",
    "space-invaders",
    "canvas",
    "javascript",
    "html5"
  ],
  "author": "Your Name",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yourusername/space-invaders-js/issues"
  },
  "homepage": "https://github.com/yourusername/space-invaders-js#readme",
  "volta": {
    "node": "20.10.0",
    "npm": "10.2.3"
  }
}
